@model saxpanel.Models.SaxCompose

@{
    ViewData["Title"] = "Neuen Dienst erstellen";
}

<h2>Umgebung erstellen</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DockerComposeFile" class="control-label"></label>
                <textarea asp-for="DockerComposeFile" class="form-control"></textarea>
                <span asp-validation-for="DockerComposeFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>